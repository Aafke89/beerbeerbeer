<div class="wrapper-breweries">
  <% if @brewery %>

  <!-- Show the brewery if there is a brewery selected -->
  <div class="breweries-closest">
    <div class="text-center">

      <!-- Differ text depending on brewery found nearby or by clicking the link -->
      <% if @zipcode %>
        <h2>The closest brewery to <%= @zipcode %> is.. </h2>
      <% end %>
        <br> <h2><%= @brewery.name %></h2>
      </div>
      <div class="brewery-info">
        <div class="brewery-map">

        </div>
        <div class="brewery-rest">
          They serve:
          <div class="brewery-beers">
            <% (1..4).each do |beer|  %>
            <div class="brewery-beer-card">
              <img src="http://cliparts.co/cliparts/piq/KBx/piqKBxbrT.png" alt="beer" width="60px"> <br>
              Dikke monnik <br>
              Blond <br>
              6.4% <br>
              20l <br>
            </div>

            <% end %>
          </div>
          Address: <%= @brewery.address %>,
          <%= @brewery.zipcode %>,
          <%= @brewery.city %> <br>
          Open on: <% JSON.parse(@brewery.open).each do |day| %>
          <%= day %>
          <% end %>

        </div>
      </div>
    </div>

    <!-- If there is no brewery selected show form to put in postal code -->

    <% else %>

    <!-- When no location was sound show message -->
    <% if @zipcode %>
       <div class="breweries-message">Oh no! There are no close breweries to <%= @zipcode %>. Please try again. </div>
    <% end %>

    <!-- ask for zipcode -->
    <div class="breweries-find">
      <div class="form">
        <%= form_tag brewers_path, method: "get"  do %>
        <%= text_field_tag "zipcode", nil, :placeholder => "fill in your zipcode", class: "input-postcode", autocomplete: "off" %>
        <%= submit_tag "find beer", class: "btn-beer" %>
        <% end %>
      </div>
    </div>
    <% end %>

    <!-- After show of one brewery or option to search for a brewery show all breweries -->
    <div class="breweries-all">
    <h2>Other breweries</h2>
     <% @breweries.each do |brewery| %>
     <%= brewery.name %>, <%= brewery.city %>
     <%= link_to "show", brewers_path(brewery: brewery ) %> <br>
     <% end %>
     <%= link_to "search another brewery", brewers_path  %>
   </div>



 </div>



